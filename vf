#!/usr/bin/env ruby

require "/usr/local/lib/vf/vim_find.rb"

vf = VimFind.new(ARGV)

vf.open(ARGV[1], WIKIDIR) if ARGV[0] == ":wio"

case vf.option
when "-w"
  vf.operate_wiki 
when "-wl"  
  vf.enlist_wiki(WIKIDIR, ARGV[1])
when "-h", "--help"  
  puts "[keywords]: search files"
  puts "-w        : oprate local wiki"
  puts "-wl       : enlist local wiki"
  puts "-h        : show help"
else
  vf.search_all
end

